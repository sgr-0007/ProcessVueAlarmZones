@model ProcessVueAlarmZones.Web.Models.IndexViewModel
@{
    ViewData["Title"] = "EEMUA 191 Zone Classifier";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<form asp-action="Index" method="post" novalidate>
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Input.AverageAlarmRate" class="form-label"></label>
        <input asp-for="Input.AverageAlarmRate" class="form-control" type="number" step="any" />
        <span asp-validation-for="Input.AverageAlarmRate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.PercentOutsideTarget" class="form-label"></label>
        <input asp-for="Input.PercentOutsideTarget" class="form-control" type="number" step="any" />
        <span asp-validation-for="Input.PercentOutsideTarget" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Classify</button>
</form>

@if (Model.Result is not null)
{
    <div class="alert alert-info mt-4">
        <strong>Zone:</strong> @Model.Result
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}